<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:orientation="vertical">

    <ListView
        android:id="@+id/lv_filter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/px8"
        android:layout_marginLeft="@dimen/px12"
        android:layout_marginRight="@dimen/px12"
        android:divider="@color/transparent"
        android:scrollbars="none"
        android:visibility="visible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/border_top_grey_cdcdcd"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_reset"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/px15"
            android:text="@string/reset"
            android:textColor="@color/warmGrey"
            android:textSize="@dimen/text_size_mediumx" />

        <TextView
            android:id="@+id/tv_confirm"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/px15"
            android:text="@string/confirm"
            android:textColor="@color/brightOrange"
            android:textSize="@dimen/text_size_mediumx" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@drawable/bg_filter_shadow" />

</LinearLayout>
