<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    >

    <RelativeLayout android:id="@+id/layoutContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/px15">
        <ImageButton
            android:id="@+id/btnChoose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@color/transparent"
            android:paddingTop="@dimen/px15"
            android:paddingBottom="@dimen/px15"
            android:paddingRight="@dimen/px15"
            android:src="@drawable/sl_filter_gou"
            />
        <com.haitao.view.CustomImageView
            android:id="@+id/ivImage"
            android:layout_width="@dimen/px51"
            android:layout_height="@dimen/px51"
            android:layout_marginRight="@dimen/px15"
            android:layout_toRightOf="@+id/btnChoose"
            android:visibility="visible"
            android:layout_centerVertical="true"
            fresco:roundAsCircle="true"/>

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/ivImage"
            android:layout_toRightOf="@id/ivImage"
            android:text="55海淘返利问答"
            android:singleLine="true"
            android:textColor="@color/darkGrey"
            android:textSize="@dimen/text_size_medium" />
        <TextView android:id="@+id/tvToday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tvTitle"
            android:layout_marginLeft="@dimen/px6"
            android:text="(0)"
            android:textColor="@color/darkOrange"
            android:textSize="@dimen/text_size_medium"/>
        <TextView android:id="@+id/tvThread"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvTitle"
            android:layout_alignLeft="@id/tvTitle"
            android:layout_marginTop="@dimen/px6"
            android:textColor="@color/lightGrey"
            android:textSize="@dimen/text_size_small"
            android:text="主题: 9726  |  贴数: 5万"/>
        <ImageView android:id="@+id/ic_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@mipmap/ic_next"/>
    </RelativeLayout>
    <View android:id="@+id/viewSeparate"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px1"
        android:background="@color/bg"/>


</LinearLayout>