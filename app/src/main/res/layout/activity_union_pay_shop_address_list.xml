<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.haitao.view.HtHeadView
        android:id="@+id/ht_headview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:divider_visible="false">

    </com.haitao.view.HtHeadView>

    <com.haitao.view.MultipleStatusView
        android:id="@+id/msv"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/content_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">

                <TextView
                    android:id="@+id/tv_area_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="12dp"
                    android:drawableRight="@mipmap/ic_select_down"
                    android:gravity="center"
                    android:paddingBottom="12dp"
                    android:paddingLeft="16dp"
                    android:paddingTop="12dp"
                    android:textColor="@color/colorPurple779CFC"
                    android:textSize="14sp"
                    tools:text="New Jersey"/>

                <TextView
                    android:id="@+id/tv_shop_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:gravity="center"
                    android:paddingBottom="12dp"
                    android:paddingRight="16dp"
                    android:paddingTop="12dp"
                    android:textColor="@color/grey848588"
                    android:textSize="14sp"
                    tools:text="16家线下门店"/>
            </RelativeLayout>

            <ExpandableListView
                android:id="@+id/lv_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="@null"
                android:dividerHeight="0dp"/>
        </LinearLayout>
    </com.haitao.view.MultipleStatusView>

</LinearLayout>