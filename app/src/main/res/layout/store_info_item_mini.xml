<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp">

    <!-- 商家图标 -->
    <com.haitao.view.CustomImageView
        android:id="@+id/img_store_logo"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="12dp"
        android:background="@drawable/border_e6e6e6_0_5dp"
        android:padding="4dp"
        fresco:actualImageScaleType="centerInside"
        fresco:failureImage="@mipmap/ic_default_60"
        fresco:failureImageScaleType="centerInside"
        fresco:placeholderImage="@mipmap/ic_default_240"
        fresco:placeholderImageScaleType="centerInside" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_store_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/grey1D1D1F"
            android:textSize="14sp"
            tools:text="Amazon" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- 返利比例 -->
            <LinearLayout
                android:id="@+id/llyt_rebate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginBottom="2dp"
                android:layout_marginRight="8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_rebate_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/grey78787D"
                    android:textSize="12sp"
                    tools:text="最高返利" />

                <TextView
                    android:id="@+id/tv_rebate_rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/orangeFF804D"
                    android:textSize="18sp"
                    tools:text="40" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="%"
                    android:textColor="@color/orangeFF804D"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- 标签1 -->
            <TextView
                android:id="@+id/tv_tag1"
                style="@style/TagSmallMuted"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="8dp"
                android:enabled="false" />

            <!-- 标签2 -->
            <TextView
                android:id="@+id/tv_tag2"
                style="@style/TagSmallMuted"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="8dp"
                android:enabled="false" />

            <!-- 标签3 -->
            <TextView
                android:id="@+id/tv_tag3"
                style="@style/TagSmallMuted"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:enabled="false" />
        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:src="@mipmap/ic_arrow_right_grey_24" />

</LinearLayout>
