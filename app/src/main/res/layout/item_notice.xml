<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/px15">

        <com.haitao.view.RoundedImageView
            android:id="@+id/img_avatar"
            android:layout_width="@dimen/px75"
            android:layout_height="@dimen/px75"
            android:layout_marginRight="@dimen/px15"
            android:src="@mipmap/ic_default_avator" />

        <TextView
            android:id="@+id/tvTpye"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_avatar"
            android:layout_marginLeft="@dimen/px6"
            android:layout_marginTop="@dimen/px15"
            android:background="@drawable/bg_new"
            android:gravity="center"
            android:text="New"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_small" />

        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/img_avatar"
            android:layout_toRightOf="@id/img_avatar"
            android:text="发烧的多米"
            android:textColor="@color/midGrey"
            android:textSize="@dimen/text_size_small" />

        <TextView
            android:id="@+id/tvTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/img_avatar"
            android:text="3分钟前"
            android:textColor="@color/lightGrey"
            android:textSize="@dimen/text_size_small" />

        <TextView
            android:id="@+id/tvContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tvName"
            android:layout_below="@id/tvName"
            android:layout_marginTop="@dimen/px15"
            android:text="评论了您的帖子「我是如何在6PM上要到退货标签的」"
            android:textColor="@color/darkGrey"
            android:textSize="@dimen/text_size_small" />
    </RelativeLayout>

    <View
        android:id="@+id/viewSeparate"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px1"
        android:layout_marginLeft="@dimen/px15"
        android:background="@color/separate" />


</LinearLayout>