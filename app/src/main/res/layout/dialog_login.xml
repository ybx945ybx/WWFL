<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
    <!-- 关闭按钮 -->
    <ImageView
        android:id="@+id/ivClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/ll_dlg_container"
        android:background="@null"
        android:paddingLeft="@dimen/px9"
        android:src="@mipmap/ic_close_dlg_update" />

    <LinearLayout
        android:id="@+id/ll_dlg_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ivClose"
        android:background="@drawable/shape_white_solid_rectangle"
        android:orientation="vertical"
        android:padding="@dimen/px30">

        <TextView
            android:id="@+id/tvContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/px10"
            android:drawableTop="@drawable/img_pop_login"
            android:gravity="center"
            android:text="登录后，通过55海淘去「Amazon」购物可享受5.5%的返利。"
            android:textColor="@color/midGrey2"
            android:textSize="@dimen/text_size_medium" />

        <TextView
            android:id="@+id/tvUnLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px42"
            android:background="@drawable/border_oval_grey"
            android:gravity="center"
            android:padding="@dimen/px15"
            android:text="@string/buy_no_rebate"
            android:textColor="@color/grey" />

        <TextView
            android:id="@+id/tvLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px24"
            android:background="@drawable/shape_orange_empty_oval"
            android:gravity="center"
            android:padding="@dimen/px15"
            android:text="@string/buy_login"
            android:textColor="@color/brightOrange" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/px42"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivQQ"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_pop_qq" />

            <ImageView
                android:id="@+id/ivSina"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px60"
                android:src="@mipmap/ic_pop_weibo" />

            <ImageView
                android:id="@+id/ivWx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px60"
                android:src="@mipmap/ic_pop_wechat" />
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>