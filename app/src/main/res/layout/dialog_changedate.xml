<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ly_myinfo_changeaddress"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/ly_myinfo_changeaddress_child"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#ffffffff"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/btn_myinfo_sure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="确认"
                android:padding="@dimen/px15"
                android:gravity="center"
                android:layout_alignParentRight="true"
                android:textColor="@color/midBlue"
                android:layout_marginRight="15dip"
                android:textSize="@dimen/text_size_medium" />


            <TextView
                android:id="@+id/btn_myinfo_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/px15"
                android:textColor="@color/midBlue"
                android:text="取消"
                android:textSize="@dimen/text_size_medium" />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="160dip"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <com.haitao.view.wheel.views.WheelView
                android:id="@+id/wv_date_year"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                />
            <com.haitao.view.wheel.views.WheelView
                android:id="@+id/wv_date_month"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                />
            <com.haitao.view.wheel.views.WheelView
                android:id="@+id/wv_date_day"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>