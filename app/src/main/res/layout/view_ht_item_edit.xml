<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    tools:ignore="RtlHardcoded">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:gravity="center_vertical"
        android:minHeight="48dp"
        android:padding="16dp">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="@dimen/hitv_left_title_width"
            android:layout_height="wrap_content"
            android:textColor="@color/grey1D1D1F"
            android:textSize="@dimen/text_size_mediumx"
            tools:text="标题" />

        <EditText
            android:id="@+id/et_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:textColor="@color/grey4F4F53"
            android:textColorHint="@color/greyA5A5A8"
            android:textSize="@dimen/text_size_medium"
            tools:hint="请输入" />

        <ImageView
            android:id="@+id/img_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_arrow_right_grey_24"
            tools:ignore="ContentDescription" />

    </LinearLayout>

    <View
        android:id="@+id/view_divider"
        style="@style/Divider_List_E6E6E6" />
</LinearLayout>
