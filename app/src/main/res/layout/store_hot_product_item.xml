<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:toos="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_margin="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.haitao.view.CustomImageView
            android:id="@+id/iv_product"
            android:layout_width="match_parent"
            android:layout_height="175dp"
            fresco:actualImageScaleType="centerInside"
            fresco:failureImage="@mipmap/ic_default_240"
            fresco:failureImageScaleType="centerCrop"
            fresco:placeholderImage="@mipmap/ic_default_240"
            fresco:placeholderImageScaleType="centerCrop"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/grey29292C"
                android:textSize="14sp"
                toos:text="Saint Laurent YSL"/>

            <TextView
                android:id="@+id/tv_sub_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/grey848588"
                android:textSize="12sp"
                toos:text="圣罗兰黑管唇釉"/>

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:layout_marginTop="10dp"
                android:textColor="@color/orangeFF804D"
                android:textSize="14sp"
                toos:text="$15.99 (约111元)"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>