<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/bg"
              android:orientation="vertical"
              android:paddingBottom="12dp"
              android:paddingLeft="16dp"
              android:paddingRight="16dp"
              android:paddingTop="12dp"
              tools:ignore="RtlHardcoded,RtlSymmetry">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_round_corner_white_6dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="16dp"
            android:paddingTop="16dp">

            <TextView
                android:id="@+id/tvGold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/orangeFF804D"
                android:textSize="@dimen/text_size_largelarge"
                tools:text="0" />

            <TextView
                android:id="@+id/tvGoldTips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/my_gold_gold"
                android:textColor="@color/grey78787D"
                android:textSize="@dimen/text_size_small" />
        </LinearLayout>

        <View
            android:layout_width="0.5dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:background="@color/greyE6E6E6" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="16dp"
            android:paddingTop="16dp">

            <TextView
                android:id="@+id/tvScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/grey1D1D1F"
                android:textSize="@dimen/text_size_largelarge"
                tools:text="0" />

            <TextView
                android:id="@+id/tvScoreTips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/my_gold_score"
                android:textColor="@color/grey78787D"
                android:textSize="@dimen/text_size_small" />
        </LinearLayout>
    </LinearLayout>

    <!--<TextView
        android:id="@+id/tv_rebate_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:drawableLeft="@mipmap/ic_question_red"
        android:drawablePadding="@dimen/px8"
        android:gravity="center"
        android:paddingBottom="@dimen/px16"
        android:paddingTop="@dimen/px24"
        android:text="@string/rebate_desc" />-->
</LinearLayout>
