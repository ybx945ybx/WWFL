<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/llyt_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/bg_border_graye_6e6e6_0_5dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_coupon_left_line"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_coupon_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/grey1D1D1F"
                android:textSize="16sp"
                tools:text="55HTSRING20"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/tv_coupon_limit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/grey4F4F53"
                android:textSize="12sp"
                android:layout_marginTop="8dp"
                tools:text="满400可用"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/tv_coupon_end_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="7dp"
                    android:textColor="@color/orangeFF804D"
                    android:textSize="10sp"
                    tools:text="有效期: 2017.06.06"/>

                <ImageView
                    android:id="@+id/iv_coupon_unique"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_ww_unique"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>