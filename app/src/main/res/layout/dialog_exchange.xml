<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:fresco="http://schemas.android.com/apk/res-auto"
              android:id="@+id/layoutPage"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="vertical"
              android:windowSoftInputMode="adjustPan|adjustResize">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="4dp"
            android:src="@mipmap/ic_close"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/exchange_rate"
            android:textColor="@color/grey1D1D1F"
            android:textSize="16sp"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/greyE6E6E6"/>

    <RelativeLayout
        android:id="@+id/rl_amount_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_item_selectable"
        android:paddingLeft="@dimen/px24"
        android:paddingRight="@dimen/px24">

        <com.haitao.view.CustomImageView
            android:id="@+id/ivLogo1"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            app:placeholderImage="@mipmap/ic_cny"
            fresco:roundAsCircle="true"/>

        <TextView
            android:id="@+id/tvName1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="13dp"
            android:layout_toRightOf="@+id/ivLogo1"
            android:drawablePadding="3dp"
            android:drawableRight="@mipmap/ic_down_gray_triangle"
            android:textColor="@color/grey1D1D1F"
            android:textSize="16sp"
            android:text="@string/cny"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:gravity="right">

            <TextView
                android:id="@+id/tv_amount_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:maxLength="9"
                android:maxLines="1"
                android:text="1"
                android:textColor="@color/orangeFF804D"
                android:textSize="@dimen/text_size_medium" />

            <TextView
                android:id="@+id/tvDesc1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:text="@string/CNY"
                android:textColor="@color/grey78787D"
                android:textSize="@dimen/text_size_medium" />
        </LinearLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_height="0.5dp"
        android:background="@color/greyE6E6E6" />

    <RelativeLayout
        android:id="@+id/rl_amount_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_item_selectable"
        android:paddingLeft="@dimen/px24"
        android:paddingRight="@dimen/px24">

        <com.haitao.view.CustomImageView
            android:id="@+id/ivLogo2"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            app:placeholderImage="@mipmap/ic_usd"
            fresco:roundAsCircle="true"/>

        <TextView
            android:id="@+id/tvName2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="13dp"
            android:layout_toRightOf="@+id/ivLogo2"
            android:drawablePadding="3dp"
            android:drawableRight="@mipmap/ic_down_gray_triangle"
            android:textColor="@color/grey1D1D1F"
            android:textSize="16sp"
            tools:text="USD" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:gravity="right">

            <TextView
                android:id="@+id/tv_amount_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:gravity="right"
                android:maxLength="9"
                android:maxLines="1"
                android:textColor="@color/grey1D1D1F"
                android:textSize="@dimen/text_size_medium"
                tools:text="1" />

            <TextView
                android:id="@+id/tvDesc2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:textColor="@color/grey78787D"
                android:textSize="@dimen/text_size_medium"
                tools:text="人民币" />
        </LinearLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_height="0.5dp"
        android:background="@color/greyE6E6E6" />

    <RelativeLayout
        android:id="@+id/rl_amount_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_item_selectable"
        android:paddingLeft="@dimen/px24"
        android:paddingRight="@dimen/px24">

        <com.haitao.view.CustomImageView
            android:id="@+id/ivLogo3"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            app:placeholderImage="@mipmap/ic_eur"
            fresco:roundAsCircle="true"/>

        <TextView
            android:id="@+id/tvName3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="13dp"
            android:layout_toRightOf="@+id/ivLogo3"
            android:drawablePadding="3dp"
            android:drawableRight="@mipmap/ic_down_gray_triangle"
            android:textColor="@color/grey1D1D1F"
            android:textSize="16sp"
            tools:text="EUR" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:gravity="right">

            <TextView
                android:id="@+id/tv_amount_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:maxLength="9"
                android:maxLines="1"
                android:textColor="@color/grey1D1D1F"
                android:textSize="@dimen/text_size_medium"
                tools:text="1" />

            <TextView
                android:id="@+id/tvDesc3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:textColor="@color/grey78787D"
                android:textSize="@dimen/text_size_medium"
                tools:text="人民币" />
        </LinearLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/greyE6E6E6" />

    <android.support.v7.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_margin="8dp"
        app:columnCount="4"
        app:rowCount="4">

        <TextView
            android:id="@+id/tv_one"
            style="@style/GridItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/calculator_item_bg_selector"
            android:text="@string/one"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_row="0"
            app:layout_rowWeight="1" />

        <TextView
            android:id="@+id/tv_two"
            style="@style/GridItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/calculator_item_bg_selector"
            android:text="@string/two"
            app:layout_column="1"
            app:layout_columnWeight="1"
            app:layout_row="0"
            app:layout_rowWeight="1" />

        <TextView
            android:id="@+id/tv_three"
            style="@style/GridItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/calculator_item_bg_selector"
            android:text="@string/three"
            app:layout_column="2"
            app:layout_columnWeight="1"
            app:layout_row="0"
            app:layout_rowWeight="1" />


        <TextView
            android:id="@+id/tv_clear"
            style="@style/GridItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/calculator_item_bg_selector"
            android:text="@string/clear"
            android:textColor="@color/orangeFF804D"
            app:layout_column="3"
            app:layout_columnWeight="1"
            app:layout_row="0"
            app:layout_rowSpan="2"
            app:layout_rowWeight="1" />

        <TextView
            android:id="@+id/tv_four"
            style="@style/GridItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/calculator_item_bg_selector"
            android:text="@string/four"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_row="1"
            app:layout_rowWeight="1" />


        <TextView
            android:id="@+id/tv_five"
            style="@style/GridItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/calculator_item_bg_selector"
            android:text="@string/five"
            app:layout_column="1"
            app:layout_columnWeight="1"
            app:layout_row="1"
            app:layout_rowWeight="1" />


        <TextView
            android:id="@+id/tv_six"
            style="@style/GridItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/calculator_item_bg_selector"
            android:text="@string/six"
            app:layout_column="2"
            app:layout_columnWeight="1"
            app:layout_row="1"
            app:layout_rowWeight="1" />

        <TextView
            android:id="@+id/tv_seven"
            style="@style/GridItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/calculator_item_bg_selector"
            android:text="@string/seven"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_row="2"
            app:layout_rowWeight="1" />

        <TextView
            android:id="@+id/tv_eight"
            style="@style/GridItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/calculator_item_bg_selector"
            android:text="@string/eight"
            app:layout_column="1"
            app:layout_columnWeight="1"
            app:layout_row="2"
            app:layout_rowWeight="1" />

        <TextView
            android:id="@+id/tv_nine"
            style="@style/GridItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/calculator_item_bg_selector"
            android:text="@string/nine"
            app:layout_column="2"
            app:layout_columnWeight="1"
            app:layout_row="2"
            app:layout_rowWeight="1" />

        <ImageView
            android:id="@+id/img_backspace"
            style="@style/GridItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/calculator_item_bg_selector"
            android:scaleType="centerInside"
            android:src="@mipmap/ic_backspace"
            android:text="X"
            app:layout_column="3"
            app:layout_columnWeight="1"
            app:layout_row="2"
            app:layout_rowSpan="2"
            app:layout_rowWeight="1" />

        <TextView
            android:id="@+id/tv_zero"
            style="@style/GridItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/calculator_item_bg_selector"
            android:text="@string/zero"
            app:layout_column="0"
            app:layout_columnSpan="2"
            app:layout_columnWeight="1"
            app:layout_row="3"
            app:layout_rowWeight="1" />

        <TextView
            android:id="@+id/tv_point"
            style="@style/GridItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/calculator_item_bg_selector"
            android:text="@string/point"
            app:layout_column="2"
            app:layout_columnWeight="1"
            app:layout_row="3"
            app:layout_rowWeight="1" />

    </android.support.v7.widget.GridLayout>

</LinearLayout>