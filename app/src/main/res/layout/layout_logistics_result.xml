<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg">

    <TextView android:id="@+id/tvResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/px15"
        android:layout_marginTop="@dimen/px6"
        android:text="@string/logistics_result"
        android:textSize="@dimen/text_size_medium"
        android:textColor="@color/darkGrey"
        android:background="@color/white"
        android:lineSpacingExtra="@dimen/px6"/>

    <TextView android:id="@+id/tvLogisticsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/px15"
        android:text="@string/logistics_history"
        android:textSize="@dimen/text_size_medium"
        android:textColor="@color/darkGrey"/>
</LinearLayout>
