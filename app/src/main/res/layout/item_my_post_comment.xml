<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:fresco="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/ll_container"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_item_selectable"
        android:orientation="vertical"
        android:padding="@dimen/px24">

        <TextView
            android:id="@+id/tv_reply_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingMultiplier="1.3"
            android:maxLines="2"
            android:textColor="@color/st_pop_menu_line"
            android:textSize="@dimen/text_size_medium"
            tools:text="幸福妈现在开始澳淘了呀~现在澳淘真的好火，就是东西太容易缺货了" />

        <com.haitao.view.FullGirdView
            android:id="@+id/gv_pics"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px12"
            android:horizontalSpacing="@dimen/px12"
            android:listSelector="@color/transparent"
            android:numColumns="3"
            android:verticalSpacing="@dimen/px15" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px24"
            android:textColor="@color/grey"
            android:textSize="@dimen/text_size_small"
            tools:text="3分钟前" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px30"
            android:background="@drawable/shape_mini_light_grey_solid_rectangle"
            android:orientation="vertical"
            android:padding="@dimen/px24">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/has_commented"
                    android:textColor="@color/warmGrey"
                    android:textSize="@dimen/text_size_small" />

                <TextView
                    android:id="@+id/tv_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/px6"
                    android:textColor="#333"
                    android:textSize="@dimen/text_size_small"
                    tools:text="90.饭桶" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_post_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px12"
                android:lineSpacingMultiplier="1.3"
                android:textColor="#575757"
                tools:text="幸福妈现在开始澳淘了呀~现在澳淘真的好火，就是东西." />

        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/divider"
        style="@style/Divider_BG" />

</LinearLayout>