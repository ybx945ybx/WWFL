<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:padding="@dimen/px24">

        <!--<com.haitao.view.CustomImageView
            android:id="@+id/img"
            android:layout_width="@dimen/px42"
            android:layout_height="@dimen/px42"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/px15"
            android:visibility="visible"
            app:failureImage="@mipmap/ic_default_60"
            app:placeholderImage="@mipmap/ic_default_60" />-->

        <TextView
            android:id="@+id/tv_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textColor="@color/grey1D1D1F"
            android:textSize="@dimen/text_size_mediumx"
            tools:text="上传头像" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_desc"
            android:layout_marginTop="@dimen/px6"
            android:textColor="@color/grey78787D"
            android:textSize="@dimen/text_size_small"
            tools:text="2015-11-11" />

        <TextView
            android:id="@+id/tv_gold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textColor="@color/orangeFF804D"
            android:textSize="@dimen/text_size_large"
            tools:ignore="RtlHardcoded"
            tools:text="+2" />
    </RelativeLayout>

    <View
        android:id="@+id/divider"
        style="@style/Divider_List_E6E6E6" />

</LinearLayout>